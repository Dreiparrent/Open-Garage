{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        // "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "declaration": false,
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "exclude": [
        "**/*.stub.ts",
        "test.ts",
        "**/*.spec.ts",
        "e2e/**",
        "node_modules/**",
        "node_modules"
    ]
}
