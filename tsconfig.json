{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "skipLibCheck": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node",
            "greensock"
        ],
        "lib": [
            "es2017",
            // "es2015",
            "dom"
        ]
    },
    "exclude": [
        "node_modules",
        "test.ts",
        "**/*.spec.ts",
        "**/e2e/*",
        "./src/main.aot.ts",
        "statsgraph",
        "dist",
        "dist-old"
    ],
    "angularCompilerOptions": {
        "genDir": "aot/",
        /*
        "annotateForClosureCompiler": true,
        "skipMetadataEmit": false,
        "skipTemplateCodegen": true,
        "strictMetadataEmit": true,
        "flatModuleOutFile": "my-lib.ng-flat.js",
        "flatModuleId": "my-lib"
        */
        /*
        "skipMetadataEmit": true, // false in docs
        "annotateForClosureCompiler": true,
        "skipTemplateCodegen": true,
        "strictMetadataEmit": true
        */
    }
}
